<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_bg_color"
    tools:context="com.skylightdeveloper.moviemaasala.activity.MovieActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/popular_movie_list_id"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_above="@+id/prog_id"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/prog_id"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/prog_center_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>
